<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- GÅ‚Ã³wna zawartoÅ›Ä‡ (ScrollView) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- NagÅ‚Ã³wek z tytuÅ‚em i ikonkÄ… informacji -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/slot_master_title"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />



                <ImageView
                    android:id="@+id/btnInfo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="@string/info_icon_description"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

            <!-- WyÅ›wietlacz salda -->
            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/balance"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Siatka slotÃ³w 3x3 (bez zmian) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Pierwszy wiersz -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/slot1"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/slot_border_dark"
                        android:layout_margin="4dp" />

                    <ImageView
                        android:id="@+id/slot2"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/slot_border_dark"
                        android:layout_margin="4dp" />

                    <ImageView
                        android:id="@+id/slot3"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/slot_border_dark"
                        android:layout_margin="4dp" />
                </LinearLayout>

                <!-- Drugi wiersz -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/slot4"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/slot_border_dark"
                        android:layout_margin="4dp" />

                    <ImageView
                        android:id="@+id/slot5"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/slot_border_dark"
                        android:layout_margin="4dp" />

                    <ImageView
                        android:id="@+id/slot6"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/slot_border_dark"
                        android:layout_margin="4dp" />
                </LinearLayout>

                <!-- Trzeci wiersz -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/slot7"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/slot_border_dark"
                        android:layout_margin="4dp" />

                    <ImageView
                        android:id="@+id/slot8"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/slot_border_dark"
                        android:layout_margin="4dp" />

                    <ImageView
                        android:id="@+id/slot9"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:padding="2dp"
                        android:scaleType="centerInside"
                        android:background="@drawable/slot_border_dark"
                        android:layout_margin="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- WybÃ³r linii -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choose_lines"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Kontener linii z zawijaniem -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Pierwszy wiersz linii -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/cbLine1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/line_1"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cbLine2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/line_2"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:layout_marginStart="16dp" />

                    <CheckBox
                        android:id="@+id/cbLine3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/line_3"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

                <!-- Drugi wiersz linii -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/cbLine4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/line_4"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:padding="12dp" />

                    <CheckBox
                        android:id="@+id/cbLine5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/line_5"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:layout_marginStart="16dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Informacje o stawce -->
            <TextView
                android:id="@+id/tvBetInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bet_info"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Przyciski gÅ‚Ã³wne -->
            <Button
                android:id="@+id/btnSpin"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="@string/spin"
                android:textSize="17sp"
                android:layout_marginBottom="4dp"
                style="@style/Widget.Material3.Button" />

            <Button
                android:id="@+id/btnShowMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ—ºï¸ Mapa"
                android:layout_margin="8dp" />

           

            <!-- Sekcja informacji o czujnikach -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sensor_info"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Akcelerometr -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/accelerometer_info"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Czujnik Å›wiatÅ‚a -->
                    <TextView
                        android:id="@+id/tvLightInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/light_info"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <!-- GPS -->
                    <TextView
                        android:id="@+id/tvLocationInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/location_info"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Instrukcje -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/instructions"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction_shake"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction_light"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/instruction_location"
                        android:textSize="12sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- ðŸ”½ NOWY: Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color" />

</LinearLayout>
